
.post-brief

  clearfix()

  .post-title, .post-date
    display block
    @media (min-width: mediumWidthSize)
      display inline-block
    vertical-align baseline
    margin-top 0

  .post-date
    @media (min-width: mediumWidthSize)
      display inline-block
      width 90px
      text-align right
      padding-right 20px

#post
  max-width 80ex
  margin auto

.post-date
  margin (0 - lineHeight) 0 0
  font-style italic
  font-size 1rem

