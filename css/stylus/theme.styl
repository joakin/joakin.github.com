
body
  // background white url('../img/bg2.png') top left repeat
  background-color white
  font-family fontFamily2
  font-size fontSize
  line-height lineHeight
  color color

.container, header
  margin 0 auto
  padding (lineHeight/5) 1em
  @media (min-width: smallWidthSize) and (max-width: mediumWidthSize)
    padding (lineHeight/4) 1em
  @media (min-width: mediumWidthSize) and (max-width: bigWidthSize)
    padding (lineHeight/3) 5%
  @media (min-width: bigWidthSize)
    padding (lineHeight/2) 10%
  box-sizing border-box

header
  background-color #fdfdfd
  font-family fontFamily1
  clearfix()
  text-align center
  @media (min-width: mediumWidthSize)
    text-align left
    display table
    width 100%

  &, *
    transition all 0.5s ease

  h1
    display inline-block
    margin 0

  > *
    vertical-align middle
    @media (min-width: mediumWidthSize)
      display table-cell

.container
  padding-top 1em
  >div
    >h1
    >h2
    >h3
      margin-top 0
      overflow hidden

#brand
  text-decoration none
  color brand-color
  text-transform lowercase
  text-shadow 0 2px 0px rgba(brand-color,0.2)
  display inline-block
  text-align center
  line-height 0.3em
  position relative
  .subtitle
    font-size 0.2em
    font-weight normal
    font-style italic

.nav
  display inline-block
  padding-left 0
  margin 0
  @media (min-width: mediumWidthSize)
    display table-cell
    vertical-align middle
    text-align right
    margin 0

  li
    display inline-block

    a
      display inline-block
      // font-weight bold
      text-decoration none

      padding (lineHeight/4)
      @media (min-width: mediumWidthSize)
        padding (lineHeight/2)

      color brand-color
      // border 1px solid rgba(0,0,0,0.2)
      border-radius 8px
      transition all 0.5s ease
      position relative

      &:hover
        background-color rgba(brand-color,0.05)
        box-shadow 0px 1px 0px rgba(darken(brand-color, 5%), 0.3)
        text-shadow 0 1px 0px rgba(brand-color,0.2)

      &:active
        transition all 0.1s ease
        background-color rgba(brand-color,0.1)
        box-shadow inset 0px 1px 0px rgba(darken(brand-color, 5%), 0.3)
        top 1px


well(background = rgba(#f3f3f3, 0.5), shadow = rgba(black, 0.02), padding = 15px, margin = 0 0 20px)
  background-color background
  border-top 3px solid shadow
  border-radius 4px
  padding padding
  margin margin

  &>:first-child
    padding-top 0
    margin-top 0

  &>:last-child
    padding-bottom 0
    margin-bottom 0

notice(color = rgb(251, 251, 217))
  well(lighten(color, 40%), darken(rgba(color, 0.05), 60%))
  color darken(color - 15deg, 55%)
  font-size 0.8em

.info
  padding lineHeight*0.75
  font-size 0.9em
  well()

.welcome-msg
  bg = rgb(255, 255, 134)
  well(lighten(bg, 95%), bg)
  margin-bottom 30px
  font-size 0.8em

.notice-msg
  notice()

#home
  .last-posts>.info
    clear both

#home, #archive, #about
  overflow hidden

#about
  h2
    display inline-block


